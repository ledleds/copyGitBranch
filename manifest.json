{
  "name": "Copy Git Branch",
  "version": "1.0",
  "description": "A chrome extension that will allow you to copy the branch of a PR you are reviewing",
  "permissions": ["https://github.com/*/*/pull/*/files"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["toggleIcon.js"] }],
  "browser_action": {
    "default_icon": {
      "48": "images/clippy128-orange.png"
    }
  },
  "manifest_version": 2
}
